[project]
name = "{{ project_slug }}"
version = "0.1.0"
description = "{{ description }}"
requires-python = ">={{ python_version }}"
dependencies = [
    "pydantic>=2.0",
    # PDF skill
    "pypdf>=4.0",
    "pdf2image>=1.16",
    "Pillow>=10.0",
    "pdfplumber>=0.10",
    "reportlab>=4.0",
    # DOCX skill
    "defusedxml>=0.7",
    # XLSX skill
    "openpyxl>=3.1",
    "pandas>=2.0",
    # OCR support
    "pytesseract>=0.3",
]

[tool.uv]
dev-dependencies = [
    "pytest>=8.0",
    "pytest-asyncio>=0.24",
    "ruff>=0.8",
    "ty>=0.0.1a6",
]

[tool.ruff]
line-length = 100
lint.select = ["E", "W", "F", "I", "B", "UP", "SIM"]

[tool.ruff.lint.isort]
known-first-party = ["functions", "models"]

[tool.ty.environment]
python-version = "{{ python_version }}"

[tool.pytest.ini_options]
testpaths = ["tests"]
asyncio_mode = "auto"
